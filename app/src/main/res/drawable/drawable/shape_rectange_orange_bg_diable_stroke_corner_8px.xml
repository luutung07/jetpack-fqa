<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray_ripple">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fbase_corner_8" />
            <solid android:color="@color/gray_ripple" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/white"
                android:startColor="@color/primary_64"
                android:type="linear" />
            <corners android:radius="@dimen/fbase_dimen_8" />
        </shape>
    </item>
</ripple>
